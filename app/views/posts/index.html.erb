<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<div id="posts">
  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= post.title + ':' + post.body %><%= if (user_signed_in?) then ' by ' + User.find(post.user_id).username end %>
      </li>
    <% end %>
  </ul>
</div>
